                            <h3 style="margin: 10px 0 5px 0;">Republic of Ghana</h3>
                            <p style="margin: 0; color: #666;">
                                <strong>Payment Period:</strong> 
                                <t t-esc="context_timestamp(datetime.datetime.now()).strftime('%B %Y')"/>
                            </p>
                        </div>

                        <!-- Employee Details Card -->
