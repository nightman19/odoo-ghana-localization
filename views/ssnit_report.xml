    <!-- Report Actions -->
    <record id="action_report_ssnit_tier1" model="ir.actions.report">
        <field name="name">SSNIT Tier 1 (13.5%)</field>
        <field name="model">hr.employee</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">gh_localization.report_ssnit_tier1</field>
        <field name="report_file">gh_localization.report_ssnit_tier1</field>
        <field name="print_report_name">'SSNIT Tier 1 - %s - %s' % (object.company_id.name if object.company_id else 'Company', time.strftime('%B %Y'))</field>
    </record>

    <record id="action_report_ssnit_tier2" model="ir.actions.report">
        <field name="name">SSNIT Tier 2 (5%)</field>
        <field name="model">hr.employee</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">gh_localization.report_ssnit_tier2</field>
        <field name="report_file">gh_localization.report_ssnit_tier2</field>
        <field name="print_report_name">'SSNIT Tier 2 - %s - %s' % (object.company_id.name if object.company_id else 'Company', time.strftime('%B %Y'))</field>
    </record>

    <!-- Server Actions for Batch Reports -->
    <record id="action_print_ssnit_tier1" model="ir.actions.server">
        <field name="name">SSNIT Tier 1 Report</field>
        <field name="model_id" ref="hr.model_hr_employee"/>
        <field name="binding_model_id" ref="hr.model_hr_employee"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
            action = env.ref('gh_localization.action_report_ssnit_tier1').report_action(records)
        </field>
    </record>

    <record id="action_print_ssnit_tier2" model="ir.actions.server">
        <field name="name">SSNIT Tier 2 Report</field>
        <field name="model_id" ref="hr.model_hr_employee"/>
