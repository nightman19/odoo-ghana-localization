<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Payroll Summary View -->
    <record id="view_payroll_summary_list" model="ir.ui.view">
        <field name="name">Ghana Payroll Summary</field>
        <field name="model">hr.employee</field>
        <field name="arch" type="xml">
            <list string="Payroll Summary" create="false" delete="false">
                <field name="name"/>
                <field name="department_id"/>
                <field name="basic_salary" sum="Total Basic"/>
                <field name="gross_salary" sum="Total Gross"/>
                <field name="paye_tax" sum="Total PAYE"/>
                <field name="ssnit_employee" sum="Total SSNIT (Emp)"/>
                <field name="ssnit_employer" sum="Total SSNIT (Empr)"/>
                <field name="net_salary" sum="Total Net Pay"/>
            </list>
        </field>
    </record>

    <!-- Menu Item -->
    <record id="action_payroll_summary" model="ir.actions.act_window">
        <field name="name">Payroll Summary</field>
        <field name="res_model">hr.employee</field>
        <field name="view_mode">list</field>
        <field name="view_id" ref="view_payroll_summary_list"/>
        <field name="domain">[('basic_salary', '>', 0)]</field>
        <field name="context">{'create': False}</field>
    </record>

    <menuitem id="menu_payroll_summary"
              name="Payroll Summary"
              parent="hr.menu_hr_root"
              action="action_payroll_summary"
              sequence="20"/>
</odoo>
